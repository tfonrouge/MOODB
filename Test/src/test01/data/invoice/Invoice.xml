<?xml version="1.0" encoding="utf-8" ?>

<oons:Table xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:oons="http://fonrouge.tech/MOODB"
            extends="Base01"
            tableName="invoice"
            xsi:schemaLocation="http://fonrouge.tech/MOODB http://fonrouge.tech/MOODB/moodbxml.xsd">

    <oons:Fields>

        <oons:FieldInteger name="docNumber" description="Invoice number" required="true" autoInc="true"/>
        <oons:FieldTableField name="customer" class="Customer" required="true"/>
        <oons:FieldDate name="date" required="true"/>
        <oons:FieldInteger name="daysOfCredit" required="true"/>
        <oons:FieldLong name="itemsCount" calculated="true"/>

    </oons:Fields>

    <oons:Index name="docNumber" keyField="docNumber" unique="true"/>

</oons:Table>
