<?xml version="1.0" encoding="utf-8" ?>

<oons:Table extends="Base" tableName="invoice"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns:oons="http://fonrouge.tech/MOODB"
            xsi:noNamespaceSchemaLocation="/moodbxml.xsd">

    <oons:Fields>

        <oons:FieldInteger name="docNumber" description="Invoice number" required="true"/>
        <oons:FieldTableField name="customer" class="Customer" required="true"/>
        <oons:FieldDate name="date" required="true">
            <oons:newValue type="">new Date();</oons:newValue>
        </oons:FieldDate>

    </oons:Fields>

    <oons:Index name="docNumber" keyField="docNumber" unique="true"/>

</oons:Table>
